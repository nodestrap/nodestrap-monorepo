  "scripts": {
    "compile+test": "lerna run tsc && lerna run test",
    "update-deps": "ncu --root --workspaces --peer",
    "update-deps-u": "ncu --root --workspaces --peer -u"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "lerna": "^6.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "type": "module",
  "workspaces": [
    "configs/*",
    "utilities/*",
    
    "features/*",
    "capabilities/*",
    "variants/*",
    "states/*",
    
    "base-components/*",
    "base-content-components/*",
    
    "simple-components/*",
    "layout-components/*",
    "status-components/*",
    "notification-components/*",
    "menu-components/*",
    "dialog-components/*",
    "composite-components/*",
    
